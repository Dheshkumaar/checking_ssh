@using System.Data
@model System.Data.DataTable
@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>
@{
    if (Model.Rows.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <td>BusinessEntityId</td>
                    <td>First Name</td>
                    <td>BirthDate</td>
                    <td>Gender</td>
                    <td>MartialStatus</td>
                    <td>HireDate</td>
                </tr>
            </thead>
            @foreach (DataRow dr in Model.Rows)
            {
                <tr>
                    <td>@dr["BusinessEntityID"].ToString()</td>
                    <td>@dr["FirstName"].ToString()</td>
                    <td>@dr["BirthDate"].ToString()</td>
                    <td>@dr["Gender"].ToString()</td>
                    <td>@dr["MaritalStatus"].ToString()</td>
                    <td>@dr["HireDate"].ToString()</td>
                </tr>
            }
        </table>
    }
}

